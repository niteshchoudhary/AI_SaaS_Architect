{
  "name": "ai-saas-architect",
  "version": "0.1.0",
  "private": true,
  "description": "AI SaaS Architect - Generate structured SaaS architecture blueprint from user input",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:nest\"",
    "dev:next": "npm run dev --workspace=apps/web",
    "dev:nest": "npm run start:dev --workspace=apps/api",
    "build": "npm run build --workspace=apps/web && npm run build --workspace=apps/api",
    "build:next": "npm run build --workspace=apps/web",
    "build:nest": "npm run build --workspace=apps/api",
    "start": "concurrently \"npm run start --workspace=apps/web\" \"npm run start --workspace=apps/api\"",
    "db:generate": "npm run db:generate --workspace=packages/database",
    "db:push": "npm run db:push --workspace=packages/database",
    "db:migrate": "npm run db:migrate --workspace=packages/database",
    "db:studio": "npm run db:studio --workspace=packages/database",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.0.0"
}
